doctype html
html
  head
    title Form
    link(href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet")
  body(class="bg-gray-100 flex items-center justify-center min-h-screen")
    .w-full.max-w-md.bg-white.p-8.rounded-lg.shadow-md
      h1(class="text-2xl font-bold mb-6 text-center text-gray-800") Registration Form
      form(action="", method="POST" class="space-y-4")
        .form-group
          label(for="name" class="block text-gray-600 font-semibold mb-1") Name:
          input#name(type="text" placeholder="Enter Your Name" name="name" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" required)
        .form-group
          label(for="email" class="block text-gray-600 font-semibold mb-1") Email:
          input#email(type="email" placeholder="Enter Email" name="email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400" required)
        .form-group
          input(type="submit" value="Submit" class="w-full bg-blue-500 text-white font-semibold py-2 rounded-lg hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-400 cursor-pointer")
